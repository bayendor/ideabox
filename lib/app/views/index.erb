<div class='container'>
  <h2>IdeaBox</h2>
    <form action='/' method='POST'>
      <div class="input-group">
        <span class="input-group-addon">Title</span>
        <input type="text" class="form-control" name='idea[title]'/>
      </div>
      <br/>
      <div class="input-group">
        <span class="input-group-addon">Description</span>
        <input type="text" class="form-control" name='idea[description]'/>
        <span class="input-group-btn">
           <button class="btn btn-success" type="submit">submit</button>
         </span>
      </div>
      </br>
    </form>
  </div>
</div>

<div class='container'>
<div class="panel panel-primary">
  <div class="panel-heading"><h4>Existing Ideas</h4></div>
    <table class="table table-striped table-hover text-center">
      <thead>
        <tr>
          <th class="text-center">Title</th>
          <th class="text-center">Description</th>
          <th class="text-center"><span class='glyphicon glyphicon-arrow-up'></span></th>
          <th class="text-center"><span class='glyphicon glyphicon-arrow-down'></span></th>
          <th class="text-center"></th>
          <th class="text-center"></th>
        </tr>
      </thead>

      <tbody>
          <tr>
          <% ideas.each do |idea| %>
            <td><%= idea.title.capitalize %></td>
            <td><%= idea.description %></td>
            <td>
              <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
                <input class='btn btn-success'type='submit' value="+"/>
              </form>
            </td>
            <td>
              <form action='/<%= idea.id %>/unlike' method='POST' style="display: inline">
                <input class='btn btn-warning' type='submit' value="-"/>
              </form>
            </td>
            <td><a class='btn btn-primary' href="/<%= idea.id %>/edit">edit</a></td>
            <td><form action='/<%= idea.id %>', method='POST'>
              <input type="hidden" name="_method" value="DELETE">
            <button class='btn btn-danger' type='submit'>delete</button>
          </form></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
